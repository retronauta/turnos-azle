{
    "scripts": {
        "dfx_install": "DFX_VERSION=0.15.1 sh -ci \"$(curl -fsSL https://sdk.dfinity.org/install.sh)\"",
        "replica_start": "dfx start --background",
        "replica_stop": "dfx stop",
        "canister_deploy_local": "dfx deploy turnos-azle",
        "canister_deploy_mainnet": "dfx deploy --network ic turnos-azle",
        "canister_uninstall": "dfx canister uninstall-code turnos-azle",
        "canister_call_get_message": "dfx canister call turnos-azle getMessage",
        "canister_call_set_message": "dfx canister call turnos-azle setMessage '(\"Hello world!\")'"
    },
    "dependencies": {
        "azle": "0.18.6",
        "uuid": "^9.0.1"
    }
}
